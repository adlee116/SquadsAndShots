<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ruleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/player_item_style">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ruleTitle"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/downButtonImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="22dp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:text="Scavanger Hunt"
        />

    <ImageView
        android:id="@+id/downButtonImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintRight_toLeftOf="@id/shotGlassImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="22dp"
        android:src="@drawable/down_arrow_foreground" />

    <ImageView
        android:id="@+id/shotGlassImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="-20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/white"
        android:src="@mipmap/shotglass_forground"/>





</androidx.constraintlayout.widget.ConstraintLayout>